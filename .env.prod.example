# ÖDP-MD² Production Environment Variables for Docker Compose
# Copy this to .env.prod and customize

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=oedp_md2_production
POSTGRES_USER=oedp_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_HERE

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_HERE

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_API_URL=https://md2.oedp.de

# ============================================
# MONITORING CONFIGURATION
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD_HERE

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=oedp-md2-backups

# AWS Credentials (if using S3 backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_SECRET_KEY_HERE

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with real values
# 2. Use strong, unique passwords for all services
# 3. Rotate passwords regularly
# 4. Store securely (use secrets manager in production)
